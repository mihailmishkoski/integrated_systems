@model EshopAdminApplication.Web.Models.Order

<h1>Order Details</h1>

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Products" asp-action="Create">Add new product</a>

    </div>

    @for(int i=0;i<Model.ProductInOrders.Count; i++)
    {
        var item = Model.ProductInOrders.ElementAt(i).OrderedProduct;
        if(i % 3 == 0)
        {
            @:<div class="row">
        }
        <div class="col-3 m-4">

                    <h5 class="card-title">@item.MovieId</h5>
        </div>

        if(i % 3 == 2)
        {
            @:</div>
        }
    }
</div>