@{
}

@model List<EshopAdminApplication.Web.Models.Order>


<div>This is index order view!</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Costumer Details</th>
            <th>Number Of Products</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="5" class="text-center"><b><i>No active products</i></b></td>
            </tr>
        }
        else
        {
            @for (int i = 0; i < Model.Count(); i++)
            {
                var item = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Owner.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductInOrders.Count)
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Details" asp-route-orderId="@item.Id">
                            View Order
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody
</table>